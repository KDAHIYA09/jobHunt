<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signupback"
    tools:context=".jobseeker.fragment.JobsFragment2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

    <TextView
        android:id="@+id/jobs_explorer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/source_sans_pro_regular"
        android:padding="15dp"
        android:background="@drawable/edittext_background"
        android:text="Explore"
        android:textStyle="bold"
        android:textColor="@color/headingColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/jobs_applying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_regular"
        android:padding="15dp"
        android:text="Applied"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/jobs_explorer"
        android:textColor="@color/headingColor"
        android:textSize="16sp"
        android:textStyle="bold"/>

        <TextView
            android:id="@+id/jobs_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_regular"
            android:padding="15dp"
            android:text="Saved"
            android:layout_toEndOf="@id/jobs_applying"
            android:textColor="@color/headingColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_below="@id/jobs_explorer"
          android:layout_marginTop="@dimen/_10sdp"
          android:id="@+id/linear"
          android:weightSum="3">

          <EditText
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textColor="@color/headingColor"
              android:hint="Search here"
              android:textColorHint="@color/edittexthintcolor"
              android:background="@drawable/edittext_background"
              android:textSize="16sp"
              android:padding="10dp"
              android:layout_weight="2"
              android:drawableLeft="@drawable/side_menu_three"
              android:drawableTint="@color/edittexthintcolor"
              android:drawablePadding="10dp"

              android:id="@+id/searchbar_jobs"/>

          <ImageView
              android:layout_width="70dp"
              android:layout_height="45dp"
              android:src="@drawable/filter"
              android:paddingLeft="5dp"
              android:id="@+id/filter"
              android:layout_weight="1"/>

      </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/headingColor"
            android:text="Explore Jobs"
            android:textStyle="bold"
            android:id="@+id/heading_job_type"
            android:layout_below="@+id/linear"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore jobs from industry companies"
            android:textSize="14sp"
            android:id="@+id/job_type_description"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/heading_job_type"
            android:textColor="@color/subheading_courcefragment"/>

        <FrameLayout
            android:id="@+id/child_frame_layout_jobs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/job_type_description"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>





</FrameLayout>
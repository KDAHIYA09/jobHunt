<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_marginBottom="5dp"
    android:background="@drawable/list_item_back">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:clipChildren="true"
        android:clipToOutline="true"
        android:background="@drawable/image_back">

        <ImageView
            android:id="@+id/new_course_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:clipToOutline="true"
            android:src="@drawable/wedev" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="start"
        android:layout_marginLeft="3dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web Development"

            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/headingColor"
            android:id="@+id/new_course_name_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subheading_courcefragment"
            android:text="12 lessons"

            android:textSize="16sp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:id="@+id/new_course_no.of_lessons"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  4.4 | 2301 learners"
                android:textSize="16sp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/edittexthintcolor"
                android:id="@+id/new_course_no.of_enrollment"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:text="Free"
            android:fontFamily="@font/source_sans_pro_regular"
            android:id="@+id/new_course_fees"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save_bookmark"
        android:padding="@dimen/_5sdp"
        android:layout_weight="0.5"
        android:layout_marginBottom="5dp"
        android:id="@+id/courseSaved"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_gravity="bottom"/>
    

</LinearLayout>
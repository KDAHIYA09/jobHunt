<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/signupback"
    tools:context=".dashboard_child_fragment.HelpFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Frequently Asked Questions"
               android:textSize="20sp"
               android:fontFamily="@font/source_sans_pro_regular"
               android:textColor="@color/headingColor"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:background="@drawable/edittext_background">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="How do I get started?"
                   android:textSize="16sp"
                   android:textColor="@color/headingColor"
                   android:textStyle="bold"
                   android:fontFamily="@font/source_sans_pro_regular"
                   android:id="@+id/ques1"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="this is the answer text......"
                   android:textSize="16sp"
                   android:textColor="@color/subheading_courcefragment"
                   android:layout_below="@id/ques1"
                   android:visibility="gone"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/source_sans_pro_regular"
                   android:id="@+id/ans1"/>

               <RelativeLayout
                   android:id="@+id/faq1drop"
                   android:layout_width="30dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_gravity="center"
                   android:layout_marginLeft="100dp">

                   <ImageView
                       android:id="@+id/faq1dropup"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:visibility="visible"
                       app:srcCompat="@drawable/plus_circle" />

                   <ImageView
                       android:id="@+id/faq1dropdown"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:rotation="180"
                       android:visibility="invisible"
                       app:srcCompat="@drawable/minus_circle" />
               </RelativeLayout>

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:layout_marginTop="10dp"
               android:background="@drawable/edittext_background">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="How do I get started?"
                   android:textSize="16sp"
                   android:textColor="@color/headingColor"
                   android:textStyle="bold"
                   android:fontFamily="@font/source_sans_pro_regular"
                   android:id="@+id/ques2"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="this is the answer text......"
                   android:textSize="16sp"
                   android:textColor="@color/subheading_courcefragment"
                   android:layout_below="@id/ques2"
                   android:visibility="gone"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/source_sans_pro_regular"
                   android:id="@+id/ans2"/>

               <RelativeLayout
                   android:id="@+id/faq2drop"
                   android:layout_width="30dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_gravity="center"
                   android:layout_marginLeft="100dp">

                   <ImageView
                       android:id="@+id/faq2dropup"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:visibility="visible"
                       app:srcCompat="@drawable/plus_circle" />

                   <ImageView
                       android:id="@+id/faq2dropdown"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:rotation="180"
                       android:visibility="invisible"
                       app:srcCompat="@drawable/minus_circle" />
               </RelativeLayout>

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:layout_marginTop="10dp"
               android:background="@drawable/edittext_background">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="How do I get started?"
                   android:textSize="16sp"
                   android:textColor="@color/headingColor"
                   android:textStyle="bold"
                   android:fontFamily="@font/source_sans_pro_regular"
                   android:id="@+id/ques3"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="this is the answer text......"
                   android:textSize="16sp"
                   android:textColor="@color/subheading_courcefragment"
                   android:layout_below="@id/ques3"
                   android:visibility="gone"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/source_sans_pro_regular"
                   android:id="@+id/ans3"/>

               <RelativeLayout
                   android:id="@+id/faq3drop"
                   android:layout_width="30dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_gravity="center"
                   android:layout_marginLeft="100dp">

                   <ImageView
                       android:id="@+id/faq3dropup"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:visibility="visible"
                       app:srcCompat="@drawable/plus_circle" />

                   <ImageView
                       android:id="@+id/faq3dropdown"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:rotation="180"
                       android:visibility="invisible"
                       app:srcCompat="@drawable/minus_circle" />
               </RelativeLayout>

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:layout_marginTop="10dp"
               android:background="@drawable/edittext_background">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="How do I get started?"
                   android:textSize="16sp"
                   android:textColor="@color/headingColor"
                   android:textStyle="bold"
                   android:fontFamily="@font/source_sans_pro_regular"
                   android:id="@+id/ques4"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="this is the answer text......"
                   android:textSize="16sp"
                   android:textColor="@color/subheading_courcefragment"
                   android:layout_below="@id/ques4"
                   android:visibility="gone"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/source_sans_pro_regular"
                   android:id="@+id/ans4"/>

               <RelativeLayout
                   android:id="@+id/faq4drop"
                   android:layout_width="30dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_gravity="center"
                   android:layout_marginLeft="100dp">

                   <ImageView
                       android:id="@+id/faq4dropup"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:visibility="visible"
                       app:srcCompat="@drawable/plus_circle" />

                   <ImageView
                       android:id="@+id/faq4dropdown"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:rotation="180"
                       android:visibility="invisible"
                       app:srcCompat="@drawable/minus_circle" />
               </RelativeLayout>

           </RelativeLayout>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/dotted_line"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Any specific query"
               android:textSize="14sp"
               android:textColor="@color/subheading_courcefragment"
               android:fontFamily="@font/source_sans_pro_regular"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter here"
               android:textColorHint="@color/edittexthintcolor"
               android:textColor="@color/headingColor"
               android:textSize="20sp"
               android:layout_marginTop="10dp"
               android:background="@drawable/edittext_background"
               android:id="@+id/userQueryHelp"
               android:padding="15dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:textColor="@color/errorColor"
               android:text="Please enter your query!"
               android:layout_marginTop="5dp"
               android:visibility="gone"
               android:id="@+id/queryError"/>

           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Submit"
               android:textSize="20sp"
               android:background="@drawable/onboard_signup_bn_background"
               android:textColor="@color/white"
               android:padding="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:id="@+id/submitQuery"/>

       </LinearLayout>

   </ScrollView>



</FrameLayout>